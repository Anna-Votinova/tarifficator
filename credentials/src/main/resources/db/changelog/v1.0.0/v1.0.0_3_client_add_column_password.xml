<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="add-password-credentials-column" author="ponomareva">

        <preConditions onFail="MARK_RAN">
            <tableExists tableName="client"/>
            <tableExists tableName="password"/>
            <not>
                <columnExists tableName="client" columnName="password_id"/>
            </not>
        </preConditions>

        <addColumn tableName="client">
            <column name="password_id" type="BIGINT">
                <constraints foreignKeyName="fk_client_password" references="password(id)"/>
            </column>
        </addColumn>
    </changeSet>

</databaseChangeLog>