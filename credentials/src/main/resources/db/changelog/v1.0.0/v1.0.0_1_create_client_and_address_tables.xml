<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="create-address" author="ponomareva">

        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="address"/>
            </not>
        </preConditions>

        <createTable tableName="address">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="pk_address_id" nullable="false"/>
            </column>
            <column name="region" type="VARCHAR(200)"/>
            <column name="city" type="VARCHAR(150)"/>
            <column name="street" type="VARCHAR(150)"/>
            <column name="building_number" type="VARCHAR(20)"/>
            <column name="apartment_number" type="VARCHAR(20)"/>
            <column name="address_type" type="VARCHAR(70)"/>
        </createTable>
    </changeSet>

    <changeSet id="create-client" author="ponomareva">

        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="client"/>
            </not>
            <and>
                <tableExists tableName="address"/>
            </and>
        </preConditions>

        <createTable tableName="client">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="pk_client_id" nullable="false"/>
            </column>
            <column name="bank_id" type="BIGINT"/>
            <column name="lastname" type="VARCHAR(100)"/>
            <column name="firstname" type="VARCHAR(100)"/>
            <column name="middle_name" type="VARCHAR(100)"/>
            <column name="birth_date" type="DATE"/>
            <column name="passport_number" type="VARCHAR(100)"/>
            <column name="birth_place" type="VARCHAR(100)"/>
            <column name="phone_number" type="VARCHAR(30)"/>
            <column name="email" type="VARCHAR(100)"/>
            <column name="registration_address" type="BIGINT">
                <constraints foreignKeyName="fk_registration_address" references="address(id)"/>
            </column>
            <column name="residential_address" type="BIGINT">
                <constraints foreignKeyName="fk_residential_address" references="address(id)"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>